{
  "name": "tradingbot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev-api": "npm run build-api && flask --app ./api/index.py run",
    "dev-next": "next dev",
    "dev": "concurrently \"npm run dev-api\" \"npm run dev-next\"",

    "build-api": "python3 -m pip install -r requirements.txt && cd ./api && python3 setup.py build_ext --inplace && cd ../",
    "build-next": "next build",
    "build": "npm run build-api && npm run build-next",

    "start-api": "flask --app ./api/index.py run",
    "start-next": "next start",
    "start": "concurrently \"npm run start-api\" \"npm run start-next\"",
    
    "lint": "next lint"
  },
  "dependencies": {
    "@canvasjs/charts": "^3.7.42",
    "@canvasjs/react-charts": "^1.0.2",
    "@types/canvasjs": "^1.9.11",
    "axios": "^1.6.7",
    "canvasjs": "^1.8.3",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "env": "^0.0.2",
    "flask": "^0.2.10",
    "lightweight-charts": "^4.1.3",
    "next": "14.1.2",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "typescript": "^5"
  }
}
